@code {
    [Parameter]
    public string Id { get; set; } = string.Empty;

    private Therapist? therapist;
    private List<Service> services = new List<Service>();
    private bool isLoading = true;

    protected override void OnInitialized()
    {
        LoadData();
    }
    
    // Phương thức tải dữ liệu từ các repository
    private void LoadData()
    {
        try
        {
            isLoading = true;
            
            // Sử dụng Task.Result để chuyển từ bất đồng bộ sang đồng bộ
            therapist = TherapistRepository.GetOne(Id);
            
            if (therapist != null)
            {
                // Lấy danh sách service theo TherapistId (chỉ những service mà therapist có expertise)
                services = TherapistExpertiseRepository.GetServicesByTherapistIdAsync(Id).Result;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading therapist details: {ex.Message}");
            // Fallback to mock data
            InitializeMockData();
        }
        finally
        {
            isLoading = false;
        }
    }

    // Phương thức xử lý URL hình ảnh
    private string GetProfileImageUrl(Therapist? therapist)
    {
        if (therapist == null || string.IsNullOrEmpty(therapist.ProfileImage))
        {
            // URL mặc định nếu không có hình
            return "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80";
        }
        
        string url = therapist.ProfileImage;
        
        // In URL gốc ra console để debug
        Console.WriteLine($"Original Profile Image URL: {url}");
        
        // Nếu URL không chứa http hoặc https, thêm https://
        if (!url.StartsWith("http://") && !url.StartsWith("https://"))
        {
            url = "https://" + url;
        }
        
        // In URL đã xử lý ra console để debug
        Console.WriteLine($"Processed Profile Image URL: {url}");
        
        return url;
    }

    private void InitializeMockData()
    {
        therapist = new Therapist
        {
            Id = Id,
            UserId = "user1",
            FirstName = "Sarah",
            LastName = "Johnson",
            Bio = "Expert in acne treatment and skin rejuvenation with over 8 years of experience. Specialized in treating various skin conditions and helping clients achieve their desired skin goals.",
            Expertise = "Acne Treatment, Skin Rejuvenation",
            HireDate = DateTime.Now.AddYears(-8),
            IsAvailable = true,
            ProfileImage = "https://images.unsplash.com/photo-1559839734-2b71ea197ec2?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80",
            WorkStartTime = new TimeSpan(9, 0, 0),
            WorkEndTime = new TimeSpan(17, 0, 0)
        };

        services = new List<Service>
        {
            new Service
            {
                Id = "1",
                ServiceName = "Acne Treatment",
                Description = "Professional acne treatment using advanced techniques and products",
                DurationMinutes = 60,
                Price = 120.00m,
                IsActive = true,
                Prerequisites = "No active skin infections, no recent sun exposure",
                Aftercare = "Avoid direct sun exposure for 24 hours, apply recommended moisturizer"
            },
            new Service
            {
                Id = "2",
                ServiceName = "Skin Rejuvenation",
                Description = "Revitalize your skin with our premium rejuvenation treatment",
                DurationMinutes = 90,
                Price = 180.00m,
                IsActive = true,
                Prerequisites = "No recent chemical peels or laser treatments",
                Aftercare = "Use gentle cleanser, avoid makeup for 12 hours"
            }
        };
    }
