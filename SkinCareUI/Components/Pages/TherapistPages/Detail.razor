<PageTitle>Therapist Details</PageTitle>

<div class="bg-gradient-to-b from-white to-pink-50 min-h-screen py-8">
    <div class="container mx-auto px-4">
        <div class="bg-white rounded-xl shadow-xl overflow-hidden mb-10">
            <div class="md:flex">
                <!-- Therapist Profile Section -->
                <div class="md:w-1/3">
                    <div class="h-96 overflow-hidden">
                        <img src="@mockTherapist.ProfileImage" class="w-full h-full object-cover" alt="@($"{mockTherapist.FirstName} {mockTherapist.LastName}")">
                    </div>
                    <div class="p-6 bg-pink-50">
                        <h3 class="text-2xl font-bold text-pink-700 mb-4">Dr. @($"{mockTherapist.FirstName} {mockTherapist.LastName}")</h3>
                        <div class="space-y-3 text-gray-600">
                            <p><span class="font-semibold text-pink-800">Experience:</span> @(DateTime.Now.Year - mockTherapist.HireDate.Year) years</p>
                            <p>
                                <span class="font-semibold text-pink-800">Status:</span> 
                                <span class="@(mockTherapist.IsAvailable ? "bg-green-100 text-green-800" : "bg-yellow-100 text-yellow-800") px-2 py-1 rounded-full text-xs font-medium ml-1">
                                    @(mockTherapist.IsAvailable ? "Available" : "Limited Availability")
                                </span>
                            </p>
                            <p><span class="font-semibold text-pink-800">Working Hours:</span> @mockTherapist.WorkStartTime.ToString(@"hh\:mm") - @mockTherapist.WorkEndTime.ToString(@"hh\:mm")</p>
                        </div>
                        <p class="my-4 text-gray-700">@mockTherapist.Bio</p>
                        <div class="mt-6">
                            <a href="/appointment/create/@mockTherapist.Id" class="block w-full py-3 px-4 bg-pink-500 hover:bg-pink-600 text-white font-medium text-center rounded-lg transition duration-300 transform hover:scale-105">
                                Book Appointment
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Services Section -->
                <div class="md:w-2/3 p-6">
                    <h2 class="text-2xl font-bold text-pink-700 mb-6">Available Services</h2>
