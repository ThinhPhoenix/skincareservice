                                <div class="p-5">
                                    <h5 class="text-lg font-semibold text-pink-600 mb-2">@service.ServiceName</h5>
                                    <p class="text-gray-600 mb-4">@service.Description</p>
                                    <ul class="space-y-2 mb-4 text-gray-700">
                                        <li class="flex items-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-pink-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
